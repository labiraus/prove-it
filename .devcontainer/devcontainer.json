{
	"name": "Go & PostgreSQL",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"features": {
		"ghcr.io/jungaretti/features/make:1": {},
		"ghcr.io/rio/features/skaffold:2": {},
		"ghcr.io/jsburckhardt/devcontainer-features/flux:1": {},
		"ghcr.io/itsmechlark/features/redis-server:1": {},
		"ghcr.io/audacioustux/devcontainers/k9s:1": {},
		"ghcr.io/larsnieuwenhuizen/features/jqyq:0": {},
		"ghcr.io/devcontainers-extra/features/nx-npm": {},
		"ghcr.io/devcontainers-extra/features/jmeter-sdkman": {}
	}

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Configure tool-specific properties.
